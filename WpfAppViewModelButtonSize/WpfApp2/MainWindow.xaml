<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:ViewModel></local:ViewModel>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Width="{Binding W , UpdateSourceTrigger=PropertyChanged}" Height="{Binding H , UpdateSourceTrigger=PropertyChanged}"></Button>

        <Label Grid.Row="1" Content="{Binding H , UpdateSourceTrigger=PropertyChanged}" ></Label>
        <Slider Grid.Row="2" Maximum="500" Value="{Binding H , UpdateSourceTrigger=PropertyChanged}"></Slider>

        <Label Grid.Row="3" Content="{Binding W , UpdateSourceTrigger=PropertyChanged}"></Label>
        <Slider Grid.Row="4" Maximum="500" Value="{Binding W , UpdateSourceTrigger=PropertyChanged}" >  </Slider>
    </Grid>
</Window>
